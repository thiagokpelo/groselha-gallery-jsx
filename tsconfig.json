{
  "compilerOptions": {
    "outDir": "build",
    "module": "ES6",
    "target": "ES6",
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": "./",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "Classic",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "functions"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "types": []
}
